{
  "private": true,
  "scripts": {
    "start": "cross-env NODE_OPTIONS=--openssl-legacy-provider umi dev",
    "build": "cross-env NODE_OPTIONS=--openssl-legacy-provider umi build",
    "postinstall": "umi generate tmp && node scripts/fix-scheduler.js",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@ant-design/pro-layout": "^6.5.0",
    "@react-three/drei": "7.22.0",
    "@react-three/fiber": "7.0.29",
    "@types/d3": "^7.4.3",
    "antd": "4",
    "d3": "^7.9.0",
    "react": "17.x",
    "react-dom": "17.x",
    "three": "0.133.0",
    "three-stdlib": "^2.36.1",
    "umi": "^3.5.43"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/three": "^0.182.0",
    "@umijs/preset-react": "1.x",
    "@umijs/test": "^3.5.43",
    "cross-env": "^10.1.0",
    "lint-staged": "^10.0.7",
    "prettier": "^2.2.0",
    "typescript": "^4.1.2",
    "yorkie": "^2.0.0"
  },
  "resolutions": {
    "scheduler": "^0.20.2"
  }
}
